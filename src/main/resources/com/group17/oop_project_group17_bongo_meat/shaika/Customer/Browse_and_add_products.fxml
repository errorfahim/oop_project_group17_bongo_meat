<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="580.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group17.oop_project_group17_bongo_meat.shaika.Customer.browseproductController">

    <children>

        <Label layoutX="251.0" layoutY="26.0" text="Browse Products" textFill="#dc942f">
            <font><Font name="System Bold" size="24.0" /></font>
        </Label>

        <Button layoutX="14.0" layoutY="11.0" onAction="#backOA" style="-fx-background-color: #dc942f;" text="Back" />

        <!-- PRODUCT TABLE -->
        <TableView fx:id="productTable" layoutX="224.0" layoutY="91.0" prefHeight="243.0" prefWidth="414.0">
            <columns>
                <TableColumn fx:id="nameCol" prefWidth="130" text="Product Name" />
                <TableColumn fx:id="categoryCol" prefWidth="120" text="Category" />
                <TableColumn fx:id="priceCol" prefWidth="80" text="Price" />
                <TableColumn fx:id="stockCol" prefWidth="80" text="Stock" />
            </columns>
        </TableView>

        <Line endX="48" endY="0" layoutX="150.0" layoutY="336.0" startX="48" startY="-240" />

        <Label layoutX="86.0" layoutY="91.0" text="Category" />
        <ComboBox fx:id="filterCategoryCB" layoutX="31.0" layoutY="125.0" prefWidth="138.0" />

        <Label layoutX="81.0" layoutY="167.0" text="Max Price" />
        <TextField fx:id="maxPriceTF" layoutX="31.0" layoutY="202.0" prefWidth="138.0" />

        <Button layoutX="69.0" layoutY="250.0" onAction="#applyFilter" style="-fx-background-color: #dc942f;" text="Filter" />

        <!-- ADD TO CART SECTION -->
        <Label layoutX="295.0" layoutY="347.0" text="ADD TO CART" textFill="#dc942f">
            <font><Font name="System Bold" size="24.0" /></font>
        </Label>

        <Label layoutX="31.0" layoutY="395.0" text="Product Name" />
        <TextField fx:id="productNameTF" layoutX="131.0" layoutY="391.0" />

        <Label layoutX="46.0" layoutY="438.0" text="Quantity" />
        <TextField fx:id="quantityTF" layoutX="131.0" layoutY="430.0" />

        <Button layoutX="318.0" layoutY="413.0" onAction="#addToCart" style="-fx-background-color: #dc942f;" text="ADD" />

        <!-- CART TABLE -->
        <TableView fx:id="cartTable" layoutX="23.0" layoutY="466.0" prefHeight="178.0" prefWidth="429.0">
            <columns>
                <TableColumn fx:id="cartNameCol" prefWidth="150" text="Product Name" />
                <TableColumn fx:id="cartQtyCol" prefWidth="60" text="Qty" />
                <TableColumn fx:id="cartTotalCol" prefWidth="150" text="Total Price" />
            </columns>
        </TableView>

        <Button layoutX="600.0" layoutY="583.0" onAction="#checkout" style="-fx-background-color: #dc942f;" text="checkout" />

        <Label fx:id="subtotalLbl" layoutX="492.0" layoutY="528.0" text="Subtotal: 0.00 Tk" />

        <Button layoutX="608.0" layoutY="11.0" onAction="#logoutOA" style="-fx-background-color: #dc942f;" text="Log Out" />
    </children>
</AnchorPane>
