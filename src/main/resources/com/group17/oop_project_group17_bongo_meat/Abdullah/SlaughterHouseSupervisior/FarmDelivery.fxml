<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #fff3e0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group17.oop_project_group17_bongo_meat.Abdullah.SlaughterHouseSupervisior.FarmDeliveryController">

    <children>

        <!-- TITLE -->
        <Label layoutX="260" layoutY="20" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Farm Delivery Confirmation" />

        <!-- TABLE -->
        <TableView fx:id="tblDelivery" layoutX="25.0" layoutY="82.0" prefHeight="350" prefWidth="850" style="-fx-border-color: #dc942f; -fx-border-width: 2;">
            <columns>

                <TableColumn fx:id="colArrivalDate" prefWidth="120" style="-fx-font-weight: bold; -fx-font-style: italic;" text="Arrival Date" />

                <TableColumn fx:id="colAnimalId" prefWidth="130" style="-fx-font-weight: bold; -fx-font-style: italic;" text="Animal ID" />

                <TableColumn fx:id="colType" prefWidth="100" style="-fx-font-weight: bold; -fx-font-style: italic;" text="Type" />

                <TableColumn fx:id="colBreed" text="Breed" prefWidth="130"
                             style="-fx-font-weight: bold; -fx-font-style: italic;" />

                <TableColumn fx:id="colHealth" prefWidth="120" style="-fx-font-weight: bold; -fx-font-style: italic;" text="Health Cert." />

                <TableColumn fx:id="colQuantity" prefWidth="90" style="-fx-font-weight: bold; -fx-font-style: italic;" text="Quantity" />

                <TableColumn fx:id="colStatus" prefWidth="150" style="-fx-font-weight: bold; -fx-font-style: italic;" text="Status" />

            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>

        <!-- NOTE LABEL -->
        <Label layoutX="25" layoutY="450" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Note (Required for Reject):" />

        <!-- NOTE AREA -->
        <TextArea fx:id="txtNote" layoutX="25" layoutY="480" prefHeight="80" prefWidth="300" style="-fx-border-color: #dc942f; -fx-border-width: 2; -fx-font-style: italic;" />

        <!-- BUTTONS -->
        <Button layoutX="400" layoutY="470" onAction="#handleShow" prefHeight="40" prefWidth="160" style="-fx-background-color: #dc942f; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-style: italic;" text="Show Records" />

        <Button layoutX="400" layoutY="520" onAction="#handleApprove" prefHeight="40" prefWidth="160" style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-style: italic;" text="Approve" />

        <Button layoutX="580" layoutY="470" onAction="#handleReject" prefHeight="40" prefWidth="160" style="-fx-background-color: #c62828; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-style: italic;" text="Reject" />

        <Button layoutX="580" layoutY="520" onAction="#handleBack" prefHeight="40" prefWidth="160" style="-fx-background-color: #6d4c41; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-style: italic;" text="Back" />

    </children>

</AnchorPane>
