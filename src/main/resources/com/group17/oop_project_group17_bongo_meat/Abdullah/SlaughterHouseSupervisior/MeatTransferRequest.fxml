<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group17.oop_project_group17_bongo_meat.Abdullah.SlaughterHouseSupervisior.MeatTransferRequestController">

    <!-- BACK BUTTON -->
    <Button layoutX="20" layoutY="20" onAction="#backButton" text="Back" textFill="#dc942f">
        <font>
            <Font name="System Bold Italic" size="16" />
        </font>
    </Button>

    <!-- SHOW BUTTON -->
    <Button layoutX="100" layoutY="20" onAction="#handleShow" text="Show" textFill="#dc942f">
        <font>
            <Font name="System Bold Italic" size="16" />
        </font>
    </Button>

    <!-- TABLE VIEW -->
    <TableView fx:id="transferTable" layoutX="20" layoutY="70" prefHeight="300" prefWidth="660">
        <columns>
            <TableColumn fx:id="batchIDColumn" prefWidth="100" text="Batch ID" />
            <TableColumn fx:id="typeColumn" prefWidth="120" text="Type" />
            <TableColumn fx:id="weightColumn" prefWidth="100" text="Weight" />
            <TableColumn fx:id="slaughterTimeColumn" prefWidth="150" text="Slaughter Time" />
            <TableColumn fx:id="statusColumn" prefWidth="150" text="Status" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <!-- OBSERVATION LABEL -->
    <Label layoutX="20" layoutY="390" text="Observation:" textFill="#dc942f">
        <font>
            <Font name="System Bold Italic" size="16" />
        </font>
    </Label>

    <!-- OBSERVATION TEXT FIELD -->
    <TextField fx:id="observationTextField" layoutX="140" layoutY="385" prefHeight="30" prefWidth="300" />

    <!-- SEND REQUEST BUTTON -->
    <Button layoutX="460" layoutY="385" onAction="#sendRequest" text="Send Request" textFill="#dc942f">
        <font>
            <Font name="System Bold Italic" size="16" />
        </font>
    </Button>

    <!-- MESSAGE LABEL -->
    <Label fx:id="messageLabel" layoutX="20" layoutY="430" textFill="green">
        <font>
            <Font name="System Bold Italic" size="16" />
        </font>
    </Label>

</AnchorPane>
