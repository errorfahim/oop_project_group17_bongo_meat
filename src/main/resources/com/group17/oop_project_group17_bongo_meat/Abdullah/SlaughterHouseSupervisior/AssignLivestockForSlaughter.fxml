<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group17.oop_project_group17_bongo_meat.Abdullah.SlaughterHouseSupervisior.AssignLivestockForSlaughterController">

    <children>

        <!-- Header Label -->
        <Label layoutX="20" layoutY="20" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f; -fx-font-size: 20px;" text="Assign Livestock for Slaughter" />

        <!-- TableView -->
        <TableView fx:id="tableView" layoutX="28.0" layoutY="83.0" prefHeight="249.0" prefWidth="780.0">

            <columns>
                <TableColumn fx:id="colBatchId" prefWidth="100" text="Batch ID" />
                <TableColumn fx:id="colType" prefWidth="100" text="Type" />
                <TableColumn fx:id="colTotalQty" prefWidth="56.66668701171875" text="Quantity" />
                <TableColumn fx:id="vetAndQAColumn" prefWidth="130.6666259765625" text="Vet &amp; QA Status" />
                <TableColumn fx:id="colAssignedTime" prefWidth="90.0" text="Assigned Time" />
                <TableColumn fx:id="colStaff" prefWidth="48.66668701171875" text="Staff" />
                <TableColumn fx:id="colSlaughterAmount" prefWidth="110.0" text="Slaughter Amount" />
                <TableColumn fx:id="colRemaining" prefWidth="134.6666259765625" text="Remaining Qty" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>

        </TableView>

        <!-- Controls (bottom row) -->
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="425.0" spacing="10">

            <children>

                <Button onAction="#handleShow" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Show Incoming" />

                <Label style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Assigned Time:" />

                <TextField fx:id="txtAssignedTime" prefWidth="150" promptText="YYYY-MM-DD HH:mm" />

                <Label style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Staff:" />

                <ComboBox fx:id="cbStaff" prefWidth="140" />

                <Label style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Slaughter Amt:" />

                <TextField fx:id="txtSlaughterAmount" prefWidth="80" />

                <Button onAction="#handleAssign" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Assign" />

            </children>
        </HBox>

        <!-- Message Label -->
        <Label fx:id="lblMessage" layoutX="20" layoutY="480" prefWidth="860" style="-fx-font-style: italic; -fx-text-fill: #dc942f;" />
      <Button layoutX="791.0" layoutY="22.0" mnemonicParsing="false" onAction="#backButton" text="Back" textFill="#dc942f">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
      </Button>

    </children>

</AnchorPane>
