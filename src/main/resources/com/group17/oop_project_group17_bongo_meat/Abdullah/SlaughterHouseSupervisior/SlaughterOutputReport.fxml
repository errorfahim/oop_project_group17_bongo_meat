<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.group17.oop_project_group17_bongo_meat.Abdullah.SlaughterHouseSupervisior.SlaughterOutputReportController"
            prefHeight="600.0" prefWidth="800.0">

    <!-- BACK BUTTON -->
    <Button layoutX="20" layoutY="20" text="Back" onAction="#backButton" textFill="#dc942f">
        <font><Font name="System Bold Italic" size="14"/></font>
    </Button>

    <!-- SHOW DATA BUTTON -->
    <Button layoutX="100" layoutY="20" text="Show" onAction="#handleShow" textFill="#dc942f">
        <font><Font name="System Bold Italic" size="14"/></font>
    </Button>

    <!-- TITLE -->
    <Label layoutX="20" layoutY="60"
           text="Slaughter Output Report"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-style: italic;"
           textFill="#dc942f"/>

    <Line startX="20" endX="760" layoutY="90" stroke="#dc942f"/>

    <!-- TABLE VIEW -->
    <TableView fx:id="slaughterTable" layoutX="20" layoutY="100" prefWidth="760" prefHeight="250">
        <columns>
            <TableColumn fx:id="batchIDColumn" text="Batch ID" prefWidth="90"/>
            <TableColumn fx:id="animalTypeColumn" text="Animal Type" prefWidth="120"/>
            <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="80"/>
            <TableColumn fx:id="remainingColumn" text="Remaining Qty" prefWidth="100"/>
            <TableColumn fx:id="weightColumn" text="Weight (kg)" prefWidth="80"/>
            <TableColumn fx:id="wastesColumn" text="Wastes" prefWidth="80"/>
            <TableColumn fx:id="staffColumn" text="Staff" prefWidth="120"/>
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="130"/>
            <TableColumn fx:id="assignTimeColumn" text="Observation" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <!-- INPUT FIELDS -->
    <Label layoutX="20" layoutY="370" text="Weight (kg):" textFill="#dc942f"/>
    <TextField fx:id="weightTextField" layoutX="120" layoutY="365" prefWidth="100"/>

    <Label layoutX="250" layoutY="370" text="Wastes Disposed:" textFill="#dc942f"/>
    <CheckBox fx:id="wastesYesCheckBox" layoutX="370" layoutY="365" text="Yes"/>
    <CheckBox fx:id="wastesNoCheckBox" layoutX="430" layoutY="365" text="No"/>

    <Label layoutX="20" layoutY="410" text="Observation:" textFill="#dc942f"/>
    <TextField fx:id="observationTextField" layoutX="120" layoutY="405" prefWidth="400"/>

    <!-- SAVE BUTTON -->
    <Button layoutX="550" layoutY="365" text="Save" onAction="#saveRecord" textFill="#dc942f">
        <font><Font name="System Bold Italic" size="14"/></font>
    </Button>

    <!-- GENERATE PDF BUTTON -->
    <Button layoutX="550" layoutY="410" text="Download PDF" onAction="#generatePDF" textFill="#dc942f">
        <font><Font name="System Bold Italic" size="14"/></font>
    </Button>

    <!-- SUCCESS / STATUS LABEL -->
    <Label fx:id="messageLabel" layoutX="20" layoutY="450" textFill="green" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

</AnchorPane>
