<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group17.oop_project_group17_bongo_meat.Abdullah.SlaughterHouseSupervisior.RecordIncomingLivestockController">

    <children>

        <!-- Back Button -->
        <Button layoutX="20" layoutY="20" onAction="#backButton" text="Back" textFill="#dc942f">
            <font>
                <Font name="System Bold" size="17" />
            </font>
        </Button>

        <!-- Title -->
        <Label layoutX="30" layoutY="70" text="Record Incoming Livestock" textFill="#dc942f">
            <font>
                <Font name="System Bold" size="20" />
            </font>
        </Label>

        <!-- Separator Line -->
        <Line endX="300" layoutX="30" layoutY="105" startX="0" stroke="#dc942f" />

        <!-- Animal Type -->
        <Label layoutX="40" layoutY="140" text="Animal Type:" textFill="#dc942f">
            <font>
                <Font name="System Bold" size="16" />
            </font>
        </Label>

        <ComboBox fx:id="typeComboBox" layoutX="200" layoutY="138" prefWidth="180" promptText="Select Type" />

        <!-- Breed -->
        <Label layoutX="40" layoutY="185" text="Breed:" textFill="#dc942f">
            <font>
                <Font name="System Bold" size="16" />
            </font>
        </Label>

        <TextField fx:id="breedTextField" layoutX="200" layoutY="183" prefWidth="180" promptText="Enter Breed" />

        <!-- Quantity -->
        <Label layoutX="40" layoutY="230" text="Quantity:" textFill="#dc942f">
            <font>
                <Font name="System Bold" size="16" />
            </font>
        </Label>

        <TextField fx:id="quantityTextField" layoutX="200" layoutY="228" prefWidth="180" promptText="Enter Quantity" />

        <!-- Weight -->
        <Label layoutX="40" layoutY="275" text="Weight:" textFill="#dc942f">
            <font>
                <Font name="System Bold" size="16" />
            </font>
        </Label>

        <TextField fx:id="weightTextField" layoutX="200" layoutY="273" prefWidth="180" promptText="Enter Weight" />

        <!-- Health Observation -->
        <Label layoutX="40" layoutY="320" text="Health Observation:" textFill="#dc942f">
            <font>
                <Font name="System Bold" size="16" />
            </font>
        </Label>

        <TextField fx:id="healthObservationTextField" layoutX="200" layoutY="318" prefWidth="240" promptText="Enter Observation" />

        <!-- Generate Batch ID Button -->
        <Button layoutX="40" layoutY="365" onAction="#generateBatchIDButton" text="Generate Batch ID" textFill="#dc942f">
            <font>
                <Font name="System Bold" size="15" />
            </font>
        </Button>

        <!-- Batch Output -->
        <Label fx:id="batchOutputLabel" layoutX="200" layoutY="370" textFill="#dc942f">
            <font>
                <Font name="System Bold" size="16" />
            </font>
        </Label>

        <!-- Save Button -->
        <Button layoutX="650" layoutY="365" onAction="#saveRecordButton" text="Save Record" textFill="#dc942f">
            <font>
                <Font name="System Bold" size="15" />
            </font>
        </Button>

        <!-- Show Button -->
        <Button layoutX="40" layoutY="415" onAction="#showButton" text="Show" textFill="#dc942f">
            <font>
                <Font name="System Bold" size="15" />
            </font>
        </Button>

        <!-- Output Label -->
        <Label fx:id="outputLabel" layoutX="200" layoutY="420" prefWidth="350" textFill="#dc942f">
            <font>
                <Font name="System Bold" size="16" />
            </font>
        </Label>

        <!-- Table -->
        <TableView fx:id="recorderIncomingTableView" layoutX="40.0" layoutY="475.0" prefHeight="225.0" prefWidth="503.0">
            <columns>
                <TableColumn fx:id="batchIDColumn" text="Batch ID" />
                <TableColumn fx:id="typeColumn" text="Type" />
                <TableColumn fx:id="quantityColumn" text="Quantity" />
                <TableColumn fx:id="weightColumn" prefWidth="67.33331298828125" text="Weight" />
                <TableColumn fx:id="healthObservationColumn" prefWidth="120.0" text="Health Observation" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>

    </children>

</AnchorPane>
