<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="475.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.group17.oop_project_group17_bongo_meat.Abdullah.SlaughterHouseSupervisior.RequestQAForIncomingLivestockController">

    <!-- Title Label -->
    <Label layoutX="24.0" layoutY="67.0"
           style="-fx-text-fill: #dc942f; -fx-font-weight: bold; -fx-font-style: italic; -fx-font-size: 22px;"
           text="Request QA For Incoming Livestock">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <!-- TableView -->
    <TableView fx:id="batchTableView" layoutX="50.0" layoutY="175.0" prefHeight="145.0" prefWidth="500.0">
        <columns>
            <TableColumn fx:id="batchIdColumn" prefWidth="120"
                         style="-fx-text-fill:  -fx-font-weight bold; -fx-font-style: italic;"
                         text="Batch ID" />
            <TableColumn fx:id="typeColumn" prefWidth="150"
                         style="-fx-text-fill:  -fx-font-weight bold; -fx-font-style: italic;"
                         text="Type" />
            <TableColumn fx:id="quantityColumn" prefWidth="100"
                         style="-fx-text-fill: -fx-font-weight bold; -fx-font-style: italic;"
                         text="Quantity" />
            <TableColumn fx:id="statusColumn" prefWidth="100"
                         style="-fx-text-fill:  -fx-font-weight bold; -fx-font-style: italic;"
                         text="Status" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <!-- Note TextField -->
    <TextField fx:id="noteTextField" layoutX="50.0" layoutY="140.0" prefWidth="320.0" promptText="Enter note here..." />

    <!-- Send QA Request Button -->
    <Button
            text="Send Request QA"
            onAction="#sendQARequest"
            textFill="#dc942f"
            prefWidth="180"
            prefHeight="40"
            AnchorPane.bottomAnchor="20.0"
            AnchorPane.rightAnchor="20.0">
        <font>
            <Font name="System Bold Italic" size="18"/>
        </font>
    </Button>

    <!-- Show Button -->
    <Button layoutX="480.0" layoutY="122.0"
            onAction="#showButtonClicked"
            text="Show" textFill="#dc942f">
        <font>
            <Font name="System Bold Italic" size="18.0" />
        </font>
    </Button>

    <!-- Back Button -->
    <Button layoutX="24.0" layoutY="14.0"
            mnemonicParsing="false"
            onAction="#backButton"
            text="Back" textFill="#dc942f">
        <font>
            <Font name="System Bold Italic" size="18.0" />
        </font>
    </Button>

    <!-- Decorative Line -->
    <Line endX="260.3333" endY="-1.0" layoutX="125.0" layoutY="100.0" startX="-100.0" stroke="#dc942f" />

    <!-- Output Label -->
    <Label fx:id="outputLabel" layoutX="57.0" layoutY="395.0" prefHeight="32.0" prefWidth="375.0"
           style="-fx-text-fill: #dc942f; -fx-font-weight: bold; -fx-font-style: italic; -fx-font-size: 22px;"
           text="" >
        <font>
            <Font size="18.0" />
        </font>
    </Label>

</AnchorPane>

