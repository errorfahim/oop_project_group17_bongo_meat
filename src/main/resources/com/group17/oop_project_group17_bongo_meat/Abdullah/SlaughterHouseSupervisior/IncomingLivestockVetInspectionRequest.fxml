<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group17.oop_project_group17_bongo_meat.Abdullah.SlaughterHouseSupervisior.IncomingLivestockVetInspectionRequestController">

   <children>

      <!-- Back Button -->
      <Button layoutX="17" layoutY="14" onAction="#backButton" text="Back" textFill="#dc942f">
         <font><Font name="System Bold Italic" size="18" /></font>
      </Button>

      <!-- Title -->
      <Label layoutX="22" layoutY="66" prefHeight="30.0" prefWidth="404.0" text="Incoming Livestock Vet Inspection Request" textFill="#dc942f">
         <font><Font name="System Bold Italic" size="20" /></font>
      </Label>

      <!-- Show Button -->
      <Button layoutX="630" layoutY="66" onAction="#showButtonClicked" text="Show" textFill="#dc942f">
         <font><Font name="System Bold Italic" size="16" /></font>
      </Button>

      <!-- TABLEVIEW -->
      <TableView fx:id="batchTableView" layoutX="22" layoutY="120" prefHeight="220" prefWidth="700">

         <columns>
            <TableColumn fx:id="batchIdColumn" prefWidth="120" text="Batch ID" />
            <TableColumn fx:id="typeColumn" prefWidth="120" text="Type" />
            <TableColumn fx:id="quantityColumn" prefWidth="100" text="Quantity" />
            <TableColumn fx:id="statusColumn" prefWidth="150" text="Vet Status" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>

      </TableView>

      <!-- Divider -->
      <Line endX="700" layoutX="22" layoutY="360" startX="0" stroke="#dc942f" />

      <!-- Note Section -->
      <Label layoutX="22" layoutY="380" text="Note :" textFill="#dc942f">
         <font><Font name="System Bold Italic" size="18" /></font>
      </Label>

      <!-- Save Request Button -->
      <Button layoutX="22" layoutY="580" onAction="#sendVetRequest" text="Send Vet Request" textFill="#dc942f">
         <font><Font name="System Bold Italic" size="18" /></font>
      </Button>
      <TextField fx:id="noteTextField" alignment="TOP_LEFT" layoutX="22.0" layoutY="407.0" prefHeight="113.0" prefWidth="626.0" promptText="write note here:" />

   </children>

</AnchorPane>
