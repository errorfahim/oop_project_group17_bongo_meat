<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="640" prefWidth="1000" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group17.oop_project_group17_bongo_meat.Abdullah.QAOfficer.ConfirmMeatTestingRequestController">

    <!-- Title + Back -->
    <Label layoutX="18" layoutY="14" style="-fx-font-size:20px; -fx-font-style: italic; -fx-font-weight: bold; -fx-text-fill: #dc942f;" text="Confirm Meat Testing Transfer Request" />

    <Button layoutX="900" layoutY="10" onAction="#handleBack" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f; -fx-border-color: #dc942f; -fx-border-width: 1;" text="Back" />

    <!-- TableView -->
    <TableView fx:id="requestTable" layoutX="18" layoutY="50" prefHeight="300" prefWidth="964">
        <columns>
            <TableColumn fx:id="colBatchId" prefWidth="110" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Batch ID" />
            <TableColumn fx:id="colWeight" prefWidth="80" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Weight" />
            <TableColumn fx:id="colType" prefWidth="100" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Type" />

            <TableColumn fx:id="colPH" prefWidth="60" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="pH" />
            <TableColumn fx:id="colColor" prefWidth="90" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Color Score" />
            <TableColumn fx:id="colMicrobial" prefWidth="120" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Microbial Count" />
            <TableColumn fx:id="colMoisture" prefWidth="80" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Moisture" />
            <TableColumn fx:id="colOdor" prefWidth="90" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Odor" />
            <TableColumn fx:id="colTemp" prefWidth="90" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Meat Temp" />
            <TableColumn fx:id="colRemarks" prefWidth="150" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Remarks" />
            <TableColumn fx:id="colStatus" prefWidth="120" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Status" />
        </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>

    <!-- Buttons -->
    <Button layoutX="18" layoutY="360" onAction="#handleShow" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Show" />

    <Button layoutX="90" layoutY="360" onAction="#handleApprove" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Approve" />

    <Button layoutX="170" layoutY="360" onAction="#handleReject" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Reject" />

    <Button layoutX="250" layoutY="360" onAction="#handleSave" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Save" />

    <!-- Inputs -->
    <Label layoutX="18" layoutY="410" style="-fx-text-fill: #dc942f; -fx-font-weight:bold; -fx-font-style:italic;" text="pH:" />
    <TextField fx:id="tfPH" layoutX="60" layoutY="404" prefWidth="80" />

    <Label layoutX="150" layoutY="410" style="-fx-text-fill: #dc942f; -fx-font-weight:bold; -fx-font-style:italic;" text="Color Score:" />
    <TextField fx:id="tfColor" layoutX="240" layoutY="404" prefWidth="80" />

    <Label layoutX="340" layoutY="410" style="-fx-text-fill: #dc942f; -fx-font-weight:bold; -fx-font-style:italic;" text="Microbial Count:" />
    <TextField fx:id="tfMicrobial" layoutX="460" layoutY="404" prefWidth="100" />

    <Label layoutX="580" layoutY="410" style="-fx-text-fill: #dc942f; -fx-font-weight:bold; -fx-font-style:italic;" text="Moisture:" />
    <TextField fx:id="tfMoisture" layoutX="650" layoutY="404" prefWidth="80" />

    <Label layoutX="740" layoutY="410" style="-fx-text-fill: #dc942f; -fx-font-weight:bold; -fx-font-style:italic;" text="Odor Eval:" />
    <TextField fx:id="tfOdor" layoutX="820" layoutY="404" prefWidth="160" />

    <Label layoutX="18" layoutY="450" style="-fx-text-fill: #dc942f; -fx-font-weight:bold; -fx-font-style:italic;" text="Meat Temp:" />
    <TextField fx:id="tfTemp" layoutX="100" layoutY="446" prefWidth="80" />

    <Label layoutX="200" layoutY="450" style="-fx-text-fill: #dc942f; -fx-font-weight:bold; -fx-font-style:italic;" text="Remarks:" />
    <TextField fx:id="tfRemarks" layoutX="270" layoutY="446" prefWidth="560" />

    <Label fx:id="lblMessage" layoutX="18" layoutY="500" style="-fx-font-weight: bold; -fx-font-style: italic;" textFill="#dc942f" />
</AnchorPane>
