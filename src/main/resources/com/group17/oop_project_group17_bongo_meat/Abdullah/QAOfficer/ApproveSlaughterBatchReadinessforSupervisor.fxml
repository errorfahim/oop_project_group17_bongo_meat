<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group17.oop_project_group17_bongo_meat.Abdullah.QAOfficer.ApproveSlaughterBatchReadinessforSupervisorController">

    <children>

        <!-- BACK BUTTON -->
        <Button layoutX="20.0" layoutY="20.0" onAction="#goBack" style="-fx-text-fill: #dc942f;" text="Back">
            <font>
                <Font size="14" />
            </font>
        </Button>

        <!-- TITLE -->
        <Label layoutX="160.0" layoutY="20.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-font-style: italic;" text="Approve Slaughter Batch Readiness" />

        <!-- BATCH TABLE -->
        <TableView fx:id="batchTable" layoutX="15.0" layoutY="70.0" prefHeight="240.0">

            <columns>
                <TableColumn fx:id="batchIdColumn" prefWidth="120" text="Batch ID" />

                <TableColumn fx:id="animalCountColumn" prefWidth="140" text="Animal Count" />

                <TableColumn fx:id="vetStatusColumn" prefWidth="150" text="Vet Clearance" />

                <TableColumn fx:id="holdingTimeColumn" prefWidth="180" text="Holding Time" />
            </columns>

        </TableView>

        <!-- OBSERVATIONS LABEL -->
        <Label layoutX="30.0" layoutY="320.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="QA Observations:" />

        <!-- OBSERVATION TEXTAREA -->
        <TextArea fx:id="observationTextArea" layoutX="15.0" layoutY="342.0" prefHeight="80.0" prefWidth="500.0" wrapText="true" />

        <!-- APPROVE BUTTON -->
        <Button layoutX="529.0" layoutY="350.0" onAction="#approveBatch" prefWidth="140" style="-fx-background-color: #dc942f; -fx-text-fill: white;" text="Approve">
            <font>
                <Font size="15" />
            </font>
        </Button>

        <!-- QUARANTINE BUTTON -->
        <Button layoutX="529.0" layoutY="390.0" onAction="#quarantineBatch" prefWidth="140" style="-fx-background-color: #dc942f; -fx-text-fill: white;" text="Quarantine">
            <font>
                <Font size="15" />
            </font>
        </Button>

        <!-- STATUS MESSAGE -->
        <Label fx:id="messageLabel" layoutX="230.0" layoutY="440.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" textFill="green" />

    </children>

</AnchorPane>
