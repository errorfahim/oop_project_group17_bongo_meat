<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group17.oop_project_group17_bongo_meat.Abdullah.QAOfficer.ExportQualityCertificationController">

    <!-- BACK BUTTON -->
    <Button layoutX="10" layoutY="10" onAction="#handleBackButton" style="-fx-background-color: #dc942f; -fx-font-weight: bold; -fx-font-style: italic;" text="Back" />

    <!-- TABLE VIEW -->
    <TableView fx:id="exportTable" layoutX="10" layoutY="50" prefHeight="400" prefWidth="780">
        <columns>
            <TableColumn fx:id="colBatchId" prefWidth="100" text="Batch ID" />
            <TableColumn fx:id="colType" prefWidth="100" text="Type" />
            <TableColumn fx:id="colWeight" prefWidth="100" text="Weight" />
            <TableColumn fx:id="colQaStatus" prefWidth="100" text="QA Status" />
            <TableColumn fx:id="colVetStatus" prefWidth="100" text="Vet Status" />
            <TableColumn fx:id="colExportStatus" prefWidth="100" text="Export Status" />
        </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>

    <!-- BUTTONS -->
    <HBox layoutX="10" layoutY="470" spacing="10">
        <Button fx:id="btnApprove" onAction="#handleApprove" style="-fx-background-color: #dc942f; -fx-font-weight: bold; -fx-font-style: italic;" text="Approve" />
        <Button fx:id="btnReject" onAction="#handleReject" style="-fx-background-color: #dc942f; -fx-font-weight: bold; -fx-font-style: italic;" text="Reject" />
        <Button fx:id="btnShow" onAction="#handleShow" style="-fx-background-color: #dc942f; -fx-font-weight: bold; -fx-font-style: italic;" text="Load Data" />
        <Button fx:id="btnPDF" onAction="#generatePDF" style="-fx-background-color: #dc942f; -fx-font-weight: bold; -fx-font-style: italic;" text="Generate PDF" />
    </HBox>

    <!-- MESSAGE LABEL -->
    <Label fx:id="messageLabel" layoutX="10" layoutY="520" prefWidth="780" style="-fx-text-fill: #dc942f; -fx-font-weight: bold; -fx-font-style: italic;" />
</AnchorPane>
