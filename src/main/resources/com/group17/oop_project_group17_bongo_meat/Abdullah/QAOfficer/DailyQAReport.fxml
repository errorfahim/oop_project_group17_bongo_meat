<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group17.oop_project_group17_bongo_meat.Abdullah.QAOfficer.DailyQAReportController">

    <!-- BACK BUTTON -->
    <Button fx:id="btnBack" layoutX="10" layoutY="10" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill:#dc942f; -fx-font-weight:bold; -fx-font-style:italic; -fx-font-size:16;" text="Back" />

    <!-- TITLE -->
    <Label layoutX="200" layoutY="10" style="-fx-font-size:22; -fx-font-weight:bold; -fx-font-style:italic; -fx-text-fill:#dc942f;" text="Daily QA Report" />

    <!-- CHECKBOXES AND NOTES -->
    <VBox layoutX="10" layoutY="50" spacing="10">
        <CheckBox fx:id="cbMeatQuality" style="-fx-text-fill:#dc942f; -fx-font-weight:bold; -fx-font-style:italic;" text="Meat Quality Check" />
        <CheckBox fx:id="cbLivestockCondition" style="-fx-text-fill:#dc942f; -fx-font-weight:bold; -fx-font-style:italic;" text="Livestock Condition Check" />
        <CheckBox fx:id="cbTraceability" style="-fx-text-fill:#dc942f; -fx-font-weight:bold; -fx-font-style:italic;" text="Traceability Check" />
        <CheckBox fx:id="cbWasteManagement" style="-fx-text-fill:#dc942f; -fx-font-weight:bold; -fx-font-style:italic;" text="Waste Management Check" />
        <CheckBox fx:id="cbExportCert" style="-fx-text-fill:#dc942f; -fx-font-weight:bold; -fx-font-style:italic;" text="Export Certification Status" />
        <CheckBox fx:id="cbPackaging" style="-fx-text-fill:#dc942f; -fx-font-weight:bold; -fx-font-style:italic;" text="Packaging for Delivery Quality" />
    </VBox>

    <!-- ACTION BUTTONS -->
    <HBox layoutX="350" layoutY="50" spacing="20">
        <Button fx:id="btnGenerateReport" onAction="#handleGenerateReport" style="-fx-background-color: transparent; -fx-text-fill:#dc942f; -fx-font-weight:bold; -fx-font-style:italic;" text="Generate Report" />
        <Button fx:id="btnDownloadPDF" onAction="#handleDownloadPDF" style="-fx-background-color: transparent; -fx-text-fill:#dc942f; -fx-font-weight:bold; -fx-font-style:italic;" text="Download PDF" />
    </HBox>

    <!-- TABLEVIEW -->
    <TableView fx:id="tableReports" layoutX="10" layoutY="250" prefHeight="300" prefWidth="880">
        <columns>
            <TableColumn fx:id="colBatchId" prefWidth="80" text="Batch ID" />
            <TableColumn fx:id="colType" prefWidth="80" text="Type" />
            <TableColumn fx:id="colWeight" prefWidth="80" text="Weight" />
            <TableColumn fx:id="colMeatQuality" prefWidth="120" text="Meat Quality Check" />
            <TableColumn fx:id="colLivestockCondition" prefWidth="140" text="Livestock Condition Check" />
            <TableColumn fx:id="colTraceability" prefWidth="120" text="Traceability Check" />
            <TableColumn fx:id="colWasteManagement" prefWidth="120" text="Waste Management Check" />
            <TableColumn fx:id="colExportCert" prefWidth="140" text="Export Certification Status" />
            <TableColumn fx:id="colPackaging" prefWidth="140" text="Packaging for Delivery" />
            <TableColumn fx:id="colReportDate" prefWidth="100" text="Report Date" />
        </columns>
    </TableView>

    <!-- MESSAGE LABEL -->
    <Label fx:id="lblMessage" layoutX="10" layoutY="560" style="-fx-text-fill:#dc942f; -fx-font-weight:bold; -fx-font-style:italic;" />
</AnchorPane>
