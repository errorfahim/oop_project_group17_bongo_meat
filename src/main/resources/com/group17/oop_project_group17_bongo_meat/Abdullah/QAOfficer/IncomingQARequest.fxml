<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Line?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group17.oop_project_group17_bongo_meat.Abdullah.QAOfficer.IncomingQARequestController">
    <!-- BACK BUTTON -->
    <Button layoutX="20" layoutY="15" onAction="#backButton" prefWidth="80" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Back" />

    <!-- Divider Line -->
    <Line endX="700" layoutX="50" layoutY="55" startX="0" stroke="#dc942f" />

    <!-- TABLEVIEW -->
    <TableView fx:id="incomingTable" layoutX="20" layoutY="120" prefHeight="260" prefWidth="660" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;">
        <columns>
            <TableColumn fx:id="colBatchId" prefWidth="120" text="Batch ID" />
            <TableColumn fx:id="colType" prefWidth="120" text="Type" />
            <TableColumn fx:id="colQuantity" prefWidth="100" text="Quantity" />
            <TableColumn fx:id="colNote" prefWidth="200" text="Note" />
            <TableColumn fx:id="colStatus" prefWidth="120" text="Status" />  <!-- Added missing column -->
        </columns>
    </TableView>

    <!-- APPROVE BUTTON -->
    <Button layoutX="20" layoutY="400" onAction="#approve" prefWidth="120" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Approve" />

    <!-- REJECT BUTTON -->
    <Button layoutX="160" layoutY="400" onAction="#reject" prefWidth="120" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Reject" />

    <!-- REASON TEXT AREA -->
    <TextArea fx:id="txtReason" layoutX="320" layoutY="400" prefHeight="60" prefWidth="200" promptText="Enter rejection reason..." />

    <!-- SELECTED BATCH LABEL -->
    <Label fx:id="lblSelectedBatch" layoutX="320" layoutY="470" prefWidth="200" text="Selected Batch: None" style="-fx-text-fill: #dc942f;" />

    <!-- SHOW BUTTON -->
    <Button layoutX="20" layoutY="80" onAction="#showRequests" prefWidth="100" style="-fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;" text="Show" />


    <!-- SECTION LABEL -->
    <Label layoutX="250.0" layoutY="14.0" style="-fx-text-fill: #dc942f;" text="Incoming QA Requests">
        <font>
            <Font name="System Bold Italic" size="18" />
        </font>
    </Label>
</AnchorPane>