<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="500.0" prefWidth="650.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.group17.oop_project_group17_bongo_meat.Abdullah.QAOfficer.MultiDepartmentAuditController">

    <children>
        <VBox layoutX="30" layoutY="25" prefWidth="590" spacing="12">

            <!-- TITLE -->
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-font-style: italic; -fx-text-fill: #dc942f;"
                   text="Multi-Department Quality Audit" />

            <!-- DATE RANGE -->
            <Label style="-fx-font-weight: bold; -fx-text-fill: #dc942f;" text="Select Date Range:" />
            <HBox spacing="10">
                <DatePicker fx:id="startDate" promptText="Start Date" />
                <DatePicker fx:id="endDate" promptText="End Date" />
            </HBox>

            <!-- DEPARTMENT SELECTION -->
            <Label style="-fx-font-weight: bold; -fx-text-fill: #dc942f;" text="Select Departments:" />
            <VBox spacing="5">
                <CheckBox fx:id="farmDept" text="Farm" />
                <CheckBox fx:id="slaughterDept" text="Slaughterhouse" />
                <CheckBox fx:id="logisticsDept" text="Logistics" />
                <CheckBox fx:id="deliveryDept" text="Delivery" />
            </VBox>

            <!-- AUDIT TYPE -->
            <Label style="-fx-font-weight: bold; -fx-text-fill: #dc942f;" text="Audit Type:" />
            <ComboBox fx:id="auditTypeCombo" promptText="Select audit type" />

            <!-- BUTTONS -->
            <HBox spacing="10">
                <Button fx:id="backButton" text="Back" onAction="#handleBack" prefWidth="120"/>
                <Button fx:id="generateReportBtn" text="Generate Audit Report" onAction="#handleGenerateReport" prefWidth="180"
                        style="-fx-background-color: #dc942f; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-style: italic;" />
                <Button fx:id="submitReportBtn" text="Submit Report to Admin" onAction="#handleSubmitReport" prefWidth="180"
                        style="-fx-background-color: #dc942f; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-style: italic;" />
            </HBox>

            <!-- OBSERVATIONS -->
            <Label style="-fx-font-weight: bold; -fx-text-fill: #dc942f;" text="Officer Observations:" />
            <TextArea fx:id="observationArea" prefHeight="100" />

            <!-- STATUS LABEL -->
            <Label fx:id="statusLabel" style="-fx-text-fill: #dc942f; -fx-font-weight: bold; -fx-font-style: italic;" />

        </VBox>
    </children>
</AnchorPane>
